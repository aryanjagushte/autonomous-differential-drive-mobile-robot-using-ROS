<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->
 
  <arg name="map_file" default="$(find diff_drive_robot_description)/maps/sample.yaml"/>  
  <arg name="move_forward_only" default="true"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find diff_drive_robot_description)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find diff_drive_robot_description)/launch/move_base.launch">    
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <node 
    pkg="rviz" 
    type="rviz" 
    name="rviz" 
    args="-d $(find diff_drive_robot_description)/launch/urdf.rviz"
    required="true"    
    
    />  
</launch>
